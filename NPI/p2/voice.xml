<?vxml version="1.0" encoding="UTF-8" ?>
<vxml version="2.0">
    
    <!-- Si no escucha nada, le volvemos a preguntar -->
    <noinput>
        <prompt xml:lang="en-US">I'm sorry, I didn't hear anything. Could you please try that again?</prompt>
        <prompt xml:lang="es-ES">Lo siento no pude escuchar nada<break/> podría intentarlo de nuevo?</prompt>
        <prompt xml:lang="de-DE">Es tut mir leid, ich habe nichts gehort <break/> Konnten Sie das bitte noch einmal versuchen?</prompt>
        <reprompt/>
    </noinput>

    <!-- Si no existe esa seleccion, le deceimos que no lo hemos entendido -->
    <nomatch>
        <prompt xml:lang="en-US">I'm sorry, I didn't understand. Could you please repeat that again?</prompt>
        <prompt xml:lang="es-ES">Lo siento no le pude entender. Podría repetirlo de nuevo?</prompt>
        <prompt xml:lang="de-DE">Es tut mir leid, ich habe es nicht verstanden. Könnten Sie das bitte noch einmal wiederholen?</prompt>
        <reprompt/>
    </nomatch>


    <!-- Salir en cualquier momento -->
    <link event="exit">
        <grammar type="application/x-jsgf">exit|salir|schliessen</grammar>
    </link>
    <catch event="exit">
        <prompt xml:lang="en-US">Thank you for using AlambraApp</prompt>
        <prompt xml:lang="es-ES">Gracias por utilizar AlambraApp</prompt>
        <prompt xml:lang="de-DE">Vielen Dank, dass Sie AlambraApp verwenden</prompt>
        <exit/>
    </catch>

