<!-- http://www1.se.cuhk.edu.hk/~hccl/publications/pub/0300769.pdf -->
<?vxml version="1.0" encoding="UTF-8" ?>
<vxml version="2.0">
    
    <!-- Si no escucha nada, le volvemos a preguntar -->
    <noinput>
        <prompt xml:lang="en-US">I'm sorry, I didn't hear anything. Could you please try that again?</prompt>
        <prompt xml:lang="es-ES">Lo siento no pude escuchar nada<break/> podría intentarlo de nuevo?</prompt>
        <prompt xml:lang="de-DE">Es tut mir leid, ich habe nichts gehort <break/> Konnten Sie das bitte noch einmal versuchen?</prompt>
        <reprompt/>
    </noinput>

    <!-- Si no existe esa seleccion, le deceimos que no lo hemos entendido -->
    <nomatch>
        <prompt xml:lang="en-US">I'm sorry, I didn't understand. Could you please repeat that again?</prompt>
        <prompt xml:lang="es-ES">Lo siento no le pude entender. Podría repetirlo de nuevo?</prompt>
        <prompt xml:lang="de-DE">Es tut mir leid, ich habe es nicht verstanden. Könnten Sie das bitte noch einmal wiederholen?</prompt>
        <reprompt/>
    </nomatch>


    <!-- Salir en cualquier momento -->
    <link event="exit">
        <grammar type="application/x-jsgf">exit|salir|schliessen</grammar>
    </link>
    <catch event="exit">
        <prompt xml:lang="en-US">Thank you for using AlambraApp</prompt>
        <prompt xml:lang="es-ES">Gracias por utilizar AlambraApp</prompt>
        <prompt xml:lang="de-DE">Vielen Dank, dass Sie AlambraApp verwenden</prompt>
        <exit/>
    </catch>

    <!-- Cambiar Idioma en cualquier momento -->
    <link next="#chlang">
        <grammar type="application/x-jsgf">change language|cambiar idioma|sprache untaushen</grammar>
    </link>
    
    <!-- Bienvenida selección del Idioma -->
    <menu id="chlang" scope="document">
        <prompt xml:lang="en-US">Welcome to AlambraApp. Please select language</prompt>
        <prompt xml:lang="es-ES">Bienvenido a AlambraApp. Porfavor seleccione el idioma</prompt>
        <prompt xml:lang="de-DE">Wilkomen bie AlambraApp. Bitte wählen sie die sprache</prompt>
    
        <!-- English -->
        <choice next="./es/welcome.xml"><prompt xml:lang="en-US">English</prompt></choice>
        <choice next="./es/welcome.xml"><prompt xml:lang="es-ES">Ingles</prompt></choice>
        <choice next="./es/welcome.xml"><prompt xml:lang="de-DE">Englisch</prompt></choice>
        
        <!-- Spanish -->
        <choice next="./es/welcome.xml"><prompt xml:lang="en-US">Espanish</prompt></choice>
        <choice next="./es/welcome.xml"><prompt xml:lang="es-ES">Español</prompt></choice>
        <choice next="./es/welcome.xml"><prompt xml:lang="de-DE">Spanisch</prompt></choice>

        <!-- German -->
        <choice next="./es/welcome.xml"><prompt xml:lang="en-US">German</prompt></choice>
        <choice next="./es/welcome.xml"><prompt xml:lang="es-ES">Aleman</prompt></choice>
        <choice next="./es/welcome.xml"><prompt xml:lang="de-DE">Deutsch</prompt></choice>
        
        <!--<help xml:lang="es-ES">
            Diga la palabra español para activar el lenguaje español
        </help>-->
    </menu>
</vxml>