<?vxml version="1.0" encoding="UTF-8" ?>
<vxml version="2.1" xmlns="http://www.w3.org/2001/vxml">
<meta name="author" content="Lukas Haring"/>
<meta name="maintainer" content="lukasharing@correo.ugr.es"/>

    <!-- Si no existe esa seleccion, le deceimos que no lo hemos entendido -->
    <nomatch>
        <prompt xml:lang="en-US">I'm sorry, I didn't understand. Could you please repeat that again?</prompt>
        <prompt xml:lang="es-ES">Lo siento no le pude entender. Podría repetirlo de nuevo?</prompt>
        <prompt xml:lang="de-DE">Es tut mir leid, ich habe es nicht verstanden. Könnten Sie das bitte noch einmal wiederholen?</prompt>
        <reprompt/>
    </nomatch>

    <!-- Si no escucha nada, le volvemos a preguntar -->
    <noinput>
        <prompt xml:lang="en-US">I'm sorry, I didn't hear anything. Could you please try that again?</prompt>
        <prompt xml:lang="es-ES">Lo siento no pude escuchar nada. Podría intentarlo de nuevo?</prompt>
        <prompt xml:lang="de-DE">Es tut mir leid, ich habe nichts gehort. Konnten Sie das bitte noch einmal versuchen?</prompt>
        <reprompt/>
    </noinput>

    <!-- Phrases to say when need help -->
    <link event="help">
        <grammar src="./es/grammatics/help.jsgf" />
    </link>

    <!-- Salir en cualquier momento -->
    <link event="exit">
        <grammar src="./es/grammatics/exit.jsgf" />
    </link>
    <catch event="exit">
        <prompt xml:lang="en-US">Thank you for using AlambraApp</prompt>
        <prompt xml:lang="es-ES">Gracias por utilizar AlambraApp</prompt>
        <prompt xml:lang="de-DE">Vielen Dank, dass Sie AlambraApp verwenden</prompt>
        <exit/>
    </catch>
    
    <!-- Cambiar Idioma en cualquier momento -->
    <!--<link next="#chlang">
        <grammar type="application/x-jsgf"> Change language | Cambiar idioma | Sprache wechseln</grammar>
    </link>-->
    
    <!-- Bienvenida selección del Idioma -->
    <menu id="chlang" scope="document">
        
        <prompt xml:lang="en-US">Welcome to AlambraApp. Please select language</prompt>
        <prompt xml:lang="es-ES">Bienvenido a AlambraApp. Porfavor seleccione el idioma</prompt>
        <prompt xml:lang="de-DE">Wilkomen bie AlambraApp. Bitte wählen sie die sprache</prompt>
    
        <!-- English -->
        <choice next="./es/welcome.xml" xml:lang="en-US">English</choice>
        <choice next="./es/welcome.xml" xml:lang="es-ES">Inglés</choice>
        <choice next="./es/welcome.xml" xml:lang="de-DE">Englisch</choice>
        
        <!-- Spanish -->
        <choice next="./es/welcome.xml" xml:lang="en-US">Espanish</choice>
        <choice next="./es/welcome.xml" xml:lang="es-ES">Español</choice>
        <choice next="./es/welcome.xml" xml:lang="de-DE">Spanisch</choice>

        <!-- German -->
        <choice next="./es/welcome.xml" xml:lang="en-US">German</choice>
        <choice next="./es/welcome.xml" xml:lang="es-ES">Alemán</choice>
        <choice next="./es/welcome.xml" xml:lang="de-DE">Deutsch</choice>

        <help>
            <prompt xml:lang="en-US">Help me</prompt>
            <prompt xml:lang="es-ES">Help me</prompt>
            <prompt xml:lang="de-DE">Help me</prompt>
        </help>
    </menu>
</vxml>