    <!-- Formulario de bienvenida -->
    <form id="welcome" scope="document">
        <block>
            <prompt xml:lang="en-US">welcome to AlambraApp</prompt>
            <prompt xml:lang="es-ES">bienvenido a AlambraApp</prompt>
            <prompt xml:lang="de-DE">wilkomen bie AlambraApp</prompt>
            <goto next="#chlang"/>
        </block>
    </form>

    <!-- Elección de Idioma -->
    <menu id="chlang" scope="document">

        <prompt xml:lang="en-US">please select language</prompt>
        <prompt xml:lang="es-ES">porfavor seleccione el idioma</prompt>
        <prompt xml:lang="de-DE">bitte wählen sie die sprache</prompt>
    
        <!-- English -->
        <choice next="#lanUS"><prompt xml:lang="en-US">english</prompt></choice>
        <choice next="#lanUS"><prompt xml:lang="es-ES">ingles</prompt></choice>
        <choice next="#lanUS"><prompt xml:lang="de-DE">englisch</prompt></choice>
       
        <!-- Spanish -->
        <choice next="#lanES"><prompt xml:lang="en-US">english</prompt></choice>
        <choice next="#lanES"><prompt xml:lang="es-ES">español</prompt></choice>
        <choice next="#lanES"><prompt xml:lang="de-DE">spanisch</prompt></choice>
        
        <!-- German -->
        <choice next="#lanDE"><prompt xml:lang="en-US">german</prompt></choice>
        <choice next="#lanDE"><prompt xml:lang="es-ES">aleman</prompt></choice>
        <choice next="#lanDE"><prompt xml:lang="de-DE">deutsch</prompt></choice>
    </menu>
