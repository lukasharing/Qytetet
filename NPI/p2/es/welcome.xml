<?vxml version="1.0" encoding="UTF-8" ?>
<vxml version="2.0" lang="es-es">
<meta name="author" content="Lukas Haring"/>
<meta name="maintainer" content="lukasharing@correo.ugr.es"/>

    <!-- Si no escucha nada, le volvemos a preguntar -->
    <noinput>
        <prompt xml:lang="en-US">I'm sorry, I didn't hear anything. Could you please try that again?</prompt>
        <prompt xml:lang="es-ES">Lo siento no pude escuchar nada<break/> podría intentarlo de nuevo?</prompt>
        <prompt xml:lang="de-DE">Es tut mir leid, ich habe nichts gehort <break/> Konnten Sie das bitte noch einmal versuchen?</prompt>
        <reprompt/>
    </noinput>

    <!-- Si no existe esa seleccion, le deceimos que no lo hemos entendido -->
    <nomatch>
        <prompt xml:lang="en-US">I'm sorry, I didn't understand. Could you please repeat that again?</prompt>
        <prompt xml:lang="es-ES">Lo siento no le pude entender. Podría repetirlo de nuevo?</prompt>
        <prompt xml:lang="de-DE">Es tut mir leid, ich habe es nicht verstanden. Könnten Sie das bitte noch einmal wiederholen?</prompt>
        <reprompt/>
    </nomatch>

    <!-- Phrases to say when need help -->
    <link event="help">
        <grammar type="application/x-jsgf"> [necesito] ayuda | no entiendo | [I need] help | I don't get it | [Ich brauche] hilfe</grammar>
    </link>


    <form id="visitor-es" scope="document">

        <property name="bargein" value="false"/>

        <block>
            <prompt>bienvenido a alambrapp en español. recuerde que la entrada a menores es gratuita</prompt>
        </block>
        
        <field name="total-visitor">
            <prompt>porfavor, seleccione el numero de visitantes</prompt>
            <grammar mode="voice" root="root">
                <rule id="root" scope="public">
                    <one-of>
                        <item>uno</item>
                        <item>dos</item>
                        <item>tres</item>
                        <item>cuatro</item>
                        <item>cinco</item>
                        <item>seis</item>
                        <item>siete</item>
                    </one-of>
                </rule>
            </grammar>
            <!-- Si llenamos -->
            <filled>
                <prompt>
                    usted dijo, <value expr="total-visitor"/> visitantes
                </prompt>
                <!-- 
                Si estamos editando esta sección, nos enviará a la edición 
                <if cond="dialog.check=='0'">
                    <goto nextitem="edit"/>
                </if>
                -->
            </filled>
            <!-- Si pedimos ayuda al sistema-->
            <help>
                debe indicar el numero de visitantes, diga el numero uno si es usted el unico visitante
            </help>
        </field>

        <!--
        <field name="edit">
            <value expr="2+3+1+(0.5*(lettuce))+(0.5*(tomato))+(0.5*(olives))+(0.5*(pickles))"/>
        </field>
        -->
        <!--<block>
            <submit next="../form.php" namelist="visitor-es"/>
        </block>-->
    </form>
</vxml>